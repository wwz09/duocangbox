<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:id="@+id/box"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10mm"
              android:background="@drawable/shape_live_focus"
              android:focusable="true"
              android:focusableInTouchMode="false"
              android:orientation="horizontal">

    <TextView
            android:id="@+id/tvChannelNum"
            android:layout_width="@dimen/vs_60"
            android:layout_height="@dimen/vs_60"
            android:ellipsize="marquee"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="22mm"
            tools:ignore="InOrMmUsage"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tvChannelName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vs_40"
                android:ellipsize="marquee"
                android:gravity="bottom"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="24mm"
                tools:text="CCTV-1"
                tools:ignore="InOrMmUsage"/>
        <TextView
                android:id="@+id/tvChannelEpgInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vs_30"
                android:ellipsize="marquee"
                android:gravity="top"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/color_FFFFFF_50"
                android:textSize="16mm"
                tools:text="哆啦A梦"
                tools:ignore="InOrMmUsage"/>
    </LinearLayout>
</LinearLayout>